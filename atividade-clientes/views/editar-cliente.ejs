<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Editar Cliente</title>
  </head>
  <body>
    <h1>Editar Cliente</h1>
    <% if (typeof error !== 'undefined') { %>
    <p style="color: red"><%= error %></p>
    <% } %>
    <form action="/clientes/editar/<%= cliente.id %>" method="POST">
      <div>
        <label for="nome">Nome do Cliente:</label>
        <input type="text" id="nome" name="nome" value="<%= cliente.nome %>" required />
      </div>
      <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= cliente.email %>" required />
      </div>
      <button type="submit">Atualizar</button>
    </form>
    <br />
    <a href="/clientes/detalhe/<%= cliente.id %>">Voltar para os detalhes</a>
    <br />
    <a href="/clientes">Voltar para a lista</a>
  </body>
</html>